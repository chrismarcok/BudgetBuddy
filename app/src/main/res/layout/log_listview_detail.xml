<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/logMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:text="Date"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/logDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logMainTextView"
        android:layout_below="@+id/logLocationTextView"
        android:layout_marginBottom="10dp"
        android:text="Details" />

    <TextView
        android:id="@+id/logLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logMainTextView"
        android:layout_below="@+id/logMainTextView"
        android:text="Location" />

    <TextView
        android:id="@+id/logAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="$Amount"
        android:textSize="24sp" />
</RelativeLayout>